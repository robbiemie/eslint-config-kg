{
  "extends": ["alloy/react", "prettier", "prettier/react", "prettier/standard"],
  "env": {
    "browser": true,
    "commonjs": true,
    "amd": true,
    "node": true,
    "es6": true,
    "jquery": true,
    "jest/globals": true
  },
  "globals": {
    "VConsole": true,
    "plug": false,
    "Zepto": true,
    "__SERVER__": false,
    "context": false,
    "__DEV__": false,
    "__RN__": false,
    "__PC__": false,
    "__TEST__": false,
    "Midas": true,
    "$script": false,
    "$loadCSS": false,
    "WeixinJSBridge": false,
    "wx": false,
    "getCurrentPages": false,
    "ColorThief": false
  },
  "rules": {
    "react/jsx-indent": ["error", 2],
    "react/jsx-indent-props": ["error", 2],
    "react/no-deprecated": 0,
    "no-script-url": "off"
  },
  "plugins": ["json", "html", "jest"],
  "settings": {
    "html/html-extensions": [".html", ".ejs"],
    "html/indent": "+2",
    "html/report-bad-indent": "error",
    "react": {
      "version": "detect"
    }
  }
}
